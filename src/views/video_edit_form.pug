extend templates/layout

block content 
    form(method="POST")
        input(name="title", type="text", placeholder="Title", value=`${videoinfo.title}`, required)
        input(name="description", type="text", placeholder="Description", value=`${videoinfo.description}`,required)
        input(name="hashtags", type="text", placeholder="Hashtags", value=`${videoinfo.hashtags.join()}`, required)
        input(type="submit", value="UPDATE")