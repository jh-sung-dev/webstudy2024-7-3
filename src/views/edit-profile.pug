extends templates/layout

block content
  //-img(src='/' + userinfo.avatarUrl, width="100" height="100")
  //-form(method="POST" enctype="multipart/form-data")
    label(for="avatar") Avatar
    input(type="file" id="avatar" name="avatar" accept="image/*")
    input(name="username" type="text", value=`${userinfo.username}`, placeholder="Username", required)
    input(name="name" type="text", value=`${userinfo.name}`, placeholder="name", required)    
    input(name="email" type="email", value=`${userinfo.email}`, placeholder="name", required)    
    input(name="location" type="text", value=`${userinfo.location}`, placeholder="Location")
    input(type="submit" value="Update")
    hr
    a(href="/user/change-password") Change Password

  svg(xmlns="http://www.w3.org/2000/svg" class="d-none")
    symbol(id="arrow-right-short" viewBox="0 0 16 16")
      path(fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8z")

  div(class="container")
    main
      div(class="col-md-7 col-lg-8")

        h4(class="mb-3") Update Your Profile

        //-img(src='/' + userinfo.avatarUrl, width="100" height="100")
        img(src=userinfo.avatarUrl, width="100" height="100")

        form(method="POST" class="needs-validation" enctype="multipart/form-data")

          div(class="col-12")
            label(for="avatar" class="form-label") Avatar
            input(type="file" class="form-control" id="avatar" name="avatar" accept="image/*")

          div(class="col-12")
            label(for="username" class="form-label") Username
            div(class="input-group")
              span(class="input-group-text") @
              input(type="text" class="form-control" id="username" placeholder="Username" name="username" required, value=`${userinfo.username}`)

          div(class="col-12")
            label(for="name" class="form-label") Name
            input(type="text" class="form-control" id="name" placeholder="Name" name="name" required, value=`${userinfo.name}`)

          div(class="col-12")
            label(for="email" class="form-label") Email
            input(type="email" class="form-control" id="email" placeholder="your@email.com" name="email" required, value=`${userinfo.email}`)

          div(class="col-12")
            label(for="location" class="form-label") Location
            input(type="location" class="form-control" id="location" placeholder="Location" name="location", value=`${userinfo.location}`)

          hr(class="my-4")

          button(class="w-100 btn btn-primary btn-lg" type="submit") UPDATE

      hr

      //-a(href="/user/change-password") Change Password

      button#recordBtn(class="btn btn-secondary d-inline-flex align-items-center" type="button" onclick="location.href='/user/change-password'") 
        span Change Password
        svg(class="bi ms-1" width="20" height="20")
          use(xlink:href="#arrow-right-short")
