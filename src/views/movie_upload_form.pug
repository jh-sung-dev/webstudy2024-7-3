extend templates/layout

block content 
    form(method="POST")
        input(name="title", type="text", placeholder="Title", required)
        input(name="summary", type="text", placeholder="Summary", required)
        input(name="year", type="number", placeholder="Year", min="1895", required)
        input(name="rating", type="number", placeholder="Rating", min="0", max="10", required)
        input(name="genres", type="text", placeholder="Genres", required)
        input(type="submit", value="UPLOAD")