mixin videoinfo(info)
  div(class="container")
    dev#videoContainer(data-videoId=info._id)
      video(src="/" + info.fileUrl, class="border rounded-3 shadow-lg mb-4" width="100%")
      div#videoController(class="videoControllerNormal")
        i#playPauseBtn(class="fas fa-play")
        i#volume(class="fas fa-volume-up")
        input#volumeRange(type="range" step="0.1" value="0.5" min="0" max="1")
        div
          span#currentTime 00:00:00
          span /
          span#totalTime 00:00:00
        input#timeline(type="range" step="1" value="0" min="0")
        i#fullScreenBtn(class="fa-solid fa-expand")

      figure
        h3 #{info.title}
        blockquote(class="blockquote")
          p=info.description
          small Uploaded by 
            a(href=`/user/${videoinfo.owner._id}`) #{videoinfo.owner.name}
        figcaption(class="blockquote-footer") #{info.createdAt}

      div(class="d-flex gap-2 justify-content-left")
        each hashtag in info.hashtags
          //-span(class="badge bg-primary-subtle border border-primary-subtle text-primary-emphasis rounded-pill") #{`#${hashtag}`}
          span(class="badge bg-secondary-subtle border border-secondary-subtle text-secondary-emphasis rounded-pill") #{`#${hashtag}`}
          //-span(class="badge bg-info-subtle border border-info-subtle text-info-emphasis rounded-pill") #{`#${hashtag}`}