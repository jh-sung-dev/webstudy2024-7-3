mixin showvideolist(list)
  div(class="album py-5 bg-body-tertiary")
    div(class="container")
      div(class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3")
        each videoinfo in list          
          div(class="col")
            a(href=`/videos/${videoinfo._id}`) 
              div(class="card shadow p-3 mb-5 bg-body-tertiary rounded")
                svg(class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false")
                  title #{videoinfo.title}
                  defs
                    pattern(id=`image-${videoinfo._id}`, patternUnits="userSpaceOnUse" width="100%" height="100%")
                      //-image(href=`/${videoinfo.thumbUrl}`, x="0" y="0" width="100%" height="100%")                  
                      image(href=`${videoinfo.thumbUrl}`, x="0" y="0" width="100%" height="100%")
                  rect(width="100%" height="100%" fill="#55595c")
                  rect(width="100%" height="100%", fill=`url(#image-${videoinfo._id})`)
                div(class="card-body")
                  p(class="card-text") #{videoinfo.description}
                  div(class="d-flex justify-content-between align-items-center")
                    span(class="badge rounded-pill text-bg-primary")
                      #{videoinfo.meta.views} #{videoinfo.meta.views > 1 ? "views" : "view"}
        else
          div(class="col") Video Not Found.
